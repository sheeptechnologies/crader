include LICENSE
include README.md
include pyproject.toml

recursive-include src/crader *.py
recursive-include src/crader *.typed

# Include DB migrations and config
recursive-include src/crader/db *
recursive-include src/crader/parsing/queries *.scm

# Exclude development files and directories
exclude Makefile
exclude dev_setup.sh
exclude mkdocs.yml
exclude requirements.txt
exclude install.sh
exclude .gitignore
exclude .antigravityignore
exclude .env.example

prune tests
prune docs
prune site
prune .github
prune tools
